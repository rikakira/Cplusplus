#include <iostream>
#include <string>
using namespace std;

int main() {
	string a, b;
    int len1, len2;
    
    //Input strings
    cin>>a;
    cin>>b;
    
    //Calculating length of strings
    len1 = a.size();
    len2 = b.size();
    
    //Printing lengths with space in between
    cout<<len1<<" "<<len2;
    
    //In next line, printing concatenated string
    cout<<"\n"<<a+b;
    
    //Swapping the first character
    swap(a[0], b[0]);
    
    // Printing the new strings
    cout<<"\n";
    cout<<a<<" "<<b;
    
    
    
  
    return 0;
}
